<script type = 'text/javascript'>
function showSpinner(){
	$('#loading-gif').show();
}
function hideSpinner(){
	$('#loading-gif').hide();
}


$('.link-delete-btn').click(function(){
	showSpinner();
	id = $(this).attr('id');
	row = $("#" + id + '-row');
	$.ajax({
      url: '/go/delete',
      type: 'POST',
      data: {'id':id},
      success:function(data){
        hideSpinner();
        $(row).remove();
      },
      error:function (xhr, textStatus, thrownError){
        alert('failed');
        hideSpinner();
      }
  });

});
</script>

