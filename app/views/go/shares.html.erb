<h3>Received</h3>
<% if not @received or @received.length ==0 %>
<p>No notifications received</p>
<% else %>
<table class = 'table table-striped table-hover'>
	<thead>
		<tr>
			<th>Sender</th>
			<th>Message</th>
			<th>Time</th>
			<th>Links</tH>
		</tr>
	</thead>
	<tbody>
		<% @received.each do |notif| %>
		<tr>
			<td><%= notif.sender %></td>
			<td><%= notif.message %></td>
			<td><%= notif.time_string %></td>
			<td>
				<% notif.links.split(',').each do |link| %>
				<div><a target = '_blank' href = 'http://pbl.link/<%= link %>'><%= link %></a></div>
				<% end %>

			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>


<h3>Sent</h3>
<% if not @sent or @sent.length ==0 %>
<p>No notifications sent</p>
<% else %>
<table class = 'table table-striped table-hover'>
	<thead>
		<tr>
			<th>Recipient</th>
			<th>Message</th>
			<th>Time</th>
			<th>Links</tH>
		</tr>
	</thead>
	<tbody>
		<% @sent.each do |notif| %>
		<tr>
			<td>
				<% notif.all_recipients.split(',').each do |recipient| %>
				<div><%= recipient %></div>
				<% end %>
			</td>
			<td><%= notif.message %></td>
			<td><%= notif.time_string %></td>
			<td>
				<% notif.links.split(',').each do |link| %>
				<div><a target = '_blank' href = 'http://pbl.link/<%= link %>'><%= link %></a></div>
				<% end %>

			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>