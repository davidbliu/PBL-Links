<style type = 'text/css'>
#directories-dropdown{
  width:100%;
  height:15px;
  margin-top:5px;
}
.row-editing{
  color:orange;
}
.row-success{
  color:green;
}
.row-error{
  color:red;
}
</style>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title" id="myModalLabel">Edit Link</h3>
      </div>
      <div class="modal-body" id = 'edit-modal-content'>
        <div class="input-group" style = 'display:none'>
            <b class="input-group-addon" id="basic-addon1">ID</b>
            <input id = 'go-id-input' type="text" class="go-input input-sm" value="default" placeholder = "Link ID: (example: lklsd80lksm)" aria-describedby="basic-addon1">
          </div>

          <div class="input-group" style = 'display:none'>
            <b class="input-group-addon" id="basic-addon4">Key</b>
            <input id = 'go-key-input' type="text" class="go-input input-sm" value="default" placeholder = "Link Key: (example: mission)" aria-describedby="basic-addon4">
          </div>

          <div class="input-group">
            <b class="input-group-addon" id="basic-addon1">URL: </b>
            <input id = 'go-url-input' type="text" class="go-input input-sm" value="default" placeholder = "Link URL: (example: http://linkedin.com)" aria-describedby="basic-addon1">
          </div>

          <div class="input-group">
            <b class="input-group-addon" id="basic-addon2">Description: </b>
            <input id = 'go-description-input' type="text" class="go-input input-sm" value="default" placeholder = "Link Description: (example: planning document for project neon links)" aria-describedby="basic-addon2">
          </div>

          <div class="input-group">
            <b class="input-group-addon" id="basic-addon3">Directory: </b>
            <!-- <input id = 'go-directory-input' type="text" class="go-input input-sm" value="default" placeholder = "Link Directory: (example: ht/fall-2014/long-movie)" aria-describedby="basic-addon3"> -->
            <div id = 'directories-dropdown-container' aria-describedby='basic-addon3'></div>
          </div>

          
      </div>
      <div class="modal-footer">
        <button id = 'delete-link-btn' type="button" class="btn btn-default btn-material-red-500" data-dismiss="modal">Delete</button>
        <button id = 'save-link-btn' type="button" class="btn btn-material-blue-500" data-dismiss="modal">Save changes</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>



<script type = 'text/javascript'>
console.log('pulling directory dropdown menu');
$.ajax({
      url: '/chrome/directories_dropdown',
      type: 'GET',
      success:function(data){
        console.log('successfully pulled ');
        console.log(data);
        $('#directories-dropdown-container').html(data);
        $('#directories-dropdown').removeClass('form-control');
      },
      error:function (xhr, textStatus, thrownError){
        console.log('error pulling directory dropdown')
      }
    });
</script>