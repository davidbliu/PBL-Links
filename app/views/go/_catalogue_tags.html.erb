<style type = 'text/css'>
.link-row>.golink-key-td{
	width:25%;
	max-width: 200px;
	overflow:hidden;
}
.link-row>.golink-description-td{
	width:50%;
	max-width:300px;
	overflow:hidden;
}
.link-row>.golink-type-td{
	width: 5%;
	overflow:hidden;
}
</style>
<table class = 'directory-table table table-hover table-condensed'>
	<tbody class = 'directory-tbody'>
	<% golinks.each do |golink| %>
	<tr class = 'link-row' id = '<%= golink.id %>-row'>
		<td class = 'golink-type-td'><img class = '' src = '<%= golink.get_type_image %>' height=17/></td>
		<td class = 'golink-key-td'><a href = '<%= golink.url %>' target="_blank"><%= golink.key %></a>
		</td> 
		<td class = 'golink-description-td'>
			<%= golink.description %>
			<% if golink.tags %>
				<% golink.tags.each do |tag| %>
				<% if @selected_tags.include?(tag) %>
					<div class = 'label label-default selected-tag' id = '<%= tag %>'><%= tag %></div>
				<% else %>
					<div class = 'label label-default' id = '<%= tag %>' ><%= tag %></div>
				<% end %>
				<% end %>
			<% end %>
		</td>
		<td style='text-align:right'>
			<a href = 'javascript:void(0);' class = 'link-edit-link' id = '<%= golink.id %>-edit-link'><i class = 'mdi-editor-mode-edit' style = 'font-size:15px'></i>
			</a>
		</td>
	</tr>
	<% end %>
	</tbody>
</table>