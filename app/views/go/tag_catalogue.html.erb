<% if not @search %>
  <div class = 'row'>
    <div class = 'right-panel-div col-md-4' id = 'collections-div'>
      <h4>My Collections</h4>
      <% if @collections %>
        <% @collections.each do |collection| %>
        <div><a href = '/go/collections/<%= collection.name %>' class = 'collections-link'><%= collection.name %></a></div>
        <% end %>
      <% end %>
    </div>

    <div class = 'right-panel-div col-md-8' id = 'tag-cloud'>
      <h4>Tags</h4>
      <p class = 'smalltext text-muted'>Click tags to filter by them</p>
      <% @tags.each do |tag| %>
        <% if @selected_tags.include?(tag) %>
          <div class = 'label label-default selected-tag' id = '<%= tag %>' <% if @tag_color_hash.keys.include?(tag) %>style = "background-color:<%= @tag_color_hash[tag].color %>"<% end %>>
            <%= tag %>
          </div>
        <% else %>
        <div class = 'label label-default tag-cloud-tag' id = '<%= tag %>' <% if @tag_color_hash.keys.include?(tag) %>style = "background-color:<%= @tag_color_hash[tag].color %>"<% end %>>
            <%= tag %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <!-- end of row with tags and collections -->
  <% end %>

  <div id = 'search-stuff'>
    <% if @search %>
    <a href = '/go'>Remove Search Filter</a>
    <% end %>
  </div>
  <p class = 'text-muted smalltext'>

  </p>
</div>


