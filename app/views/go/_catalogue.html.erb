

<div class = 'hidden' id = 'hover-div'></div>
<table class = 'table table-condensed'>
	<thead>
		<th>Type</th>
		<th>Directory</th>
		<th>Key</th>
		<th>Link</th>
		<th>Description</th>
		
		<th>Owner</th>
		<th>Clicks</th>
		<th>Updated</th>
	</thead>
	<tbody>
	<% @go_links.each do |golink| %>
	<tr>
		<td><a href = '#'><img class = 'shadow-z-2' src = '<%= golink.get_type_image %>' height=17/></a></td>
		<td><%= link_to golink.dir, '/go/directories?dir='+golink.dir %></td>
		<td>
			<div class = 'go-link-key' id = 'go-link-key-<%= golink.id %>'><%= golink.key %></div>
		</td> 
		<td><%= link_to golink.short_url(25), golink.url %></td>
		<td><%= golink.description %></td>
		
		<td><% if golink.member_id %>
			<%= @member_hash[golink.member_id].name %>
			<% else %>none<% end %></td>
		<td><%= golink.num_clicks %></td>
		<td><%= golink.updated_at_string %> <%= link_to '(Edit)', '/go/' + golink.id+'/edit' %></td></tr>
	<% end %>
	</tbody>
</table>