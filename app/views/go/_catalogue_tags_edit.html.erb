<style type = 'text/css'>
.link-row>.golink-key-td{
	width:25%;
	max-width: 200px;
	overflow:hidden;
}
.link-row>.golink-description-td{
	width:40%;
	max-width:300px;
	overflow:hidden;
}
.link-row>.golink-type-td{
	width: 5%;
	overflow:hidden;
}
</style>
<table class = 'directory-table table table-hover table-condensed'>
	<thead>
		<tr>
			<th></th>
			<th>Key</th>
			<th>Description</th>
			<th>Permissions</th>
		</tr>
	</thead>
	<tbody class = 'directory-tbody'>
	<% golinks.each do |golink| %>
	<tr class = 'link-row' id = '<%= golink.id %>-row'>
		<td class = 'golink-type-td'><img class = '' src = '<%= golink.get_type_image %>' height=17/></td>
		<td class = 'golink-key-td'><input type = 'text' class = 'form-control' value = '<%= golink.key %>'></input>
		</td> 
		<td class = 'golink-description-td'>
			<input type = 'text' class = 'form-control' value = '<%= golink.description %>'></input>
		</td>
		<td>
			<input type = 'text' class = 'form-control' value = '<%= golink.groups ? golink.groups.join(',') : ""%>'></input>
		</td>
		<td style='text-align:right'>
			<a href = 'javascript:void(0);' class = 'link-save-btn' id = '<%= golink.id %>-save-link'><i class = 'mdi-action-done' style = 'font-size:15px'></i>
			</a>
			<a href = 'javascript:void(0);' class = 'link-delete-btn' id = '<%= golink.id %>-delete-link'><i class = 'mdi-action-delete' style = 'font-size:15px'></i>
			</a>
		</td>
	</tr>
	<% end %>
	</tbody>
</table>