<style type = 'text/css'>
.link-row>.golink-key-td{
	width:25%;
	max-width: 200px;
	overflow:hidden;
}
.link-row>.golink-description-td{
	width:50%;
	max-width:300px;
	overflow:hidden;
}
.link-row>.golink-type-td{
	width: 5%;
	overflow:hidden;
}
</style>

<h2 style = 'text-align:center'><%= @collection.name %></h2>
<p style = 'text-align:center'><%= @collection.description %></p>

<% if @parents %>
<h3>Parents: 
	<span style = 'font-size:15px'>
		<% @parents.each do |parent| %>
		<a href = '/go/new_collections/<%= parent.id %>'><%= parent.name %></a>
		<% end %>
	</span>
	</h3>
<% end %>
<h3>Subcollections</h3>
<% if @collection.subcollections %>
	<% @collection.subcollections.each do |id| %>
	<h5><a href = '/go/new_collections/<%= id %>'><%= @collection_hash[id].name %> (<%= @collection_hash[id].golinks.length %> Links, <%= @collection_hash[id].subcollections ? @collection_hash[id].subcollections.length : 0 %> Collections)</a></h5>
	<% end %>
<% end %>

<h3>Links</h3>
<table class = 'table table-hover table-condensed'>
	<tbody>
	<% @golinks.each do |golink| %>
	<tr class = 'link-row' id = '<%= golink.id %>-row'>
		<td class = 'golink-type-td'><img class = '' src = '<%= golink.get_type_image %>' height=17/></td>
		<td class = 'golink-key-td'><a href = '<%= golink.url %>' target="_blank"><%= golink.key %></a>
		</td> 
		<td class = 'golink-description-td'>
			<%= golink.description %>
		</td>
	</tr>
	<% end %>
	</tbody>
</table>

<% if @collection.subcollections %>
	<% @collection.subcollections.each do |id| %>
		<h3><a href = '/go/new_collections/<%= id %>'><%= @collection_hash[id].name %></a></h3>
		<table class = 'table table-hover table-condensed'>
			<tbody>
			<% @collection_golinks[id].each do |golink| %>
			<tr class = 'link-row' id = '<%= golink.id %>-row'>
				<td class = 'golink-type-td'><img class = '' src = '<%= golink.get_type_image %>' height=17/></td>
				<td class = 'golink-key-td'><a href = '<%= golink.url %>' target="_blank"><%= golink.key %></a>
				</td> 
				<td class = 'golink-description-td'>
					<%= golink.description %>
				</td>
			</tr>
			<% end %>
			</tbody>
		</table>
	<% end %>
<% end %>
