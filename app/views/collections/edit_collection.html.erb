<style type = 'text/css'>
.link-row>.golink-key-td{
	width:25%;
	max-width: 200px;
	overflow:hidden;
}
.link-row>.golink-description-td{
	width:50%;
	max-width:300px;
	overflow:hidden;
}
.link-row>.golink-type-td{
	width: 5%;
	overflow:hidden;
}
</style>

<h2 style = 'text-align:center'><%= @collection.name %></h2>

<button id = 'submit-btn' type = 'submit' class = 'btn btn-material-blue-500'>Submit these changes</button>
<h3>Description</h3>
<input id = 'description-input' type = 'text' class = 'form-control' value = '<%= @collection.description %>'></input>

<h3>Groups who can view this collection</h3>
<input type = 'text' class = 'form-control' value = '<%= @collection.groups ? @collection.groups.join(',') : '' %>' placeholder = 'Enter names of groups that can view this collection'></input>
<h3>Parents</h3>
<% if @parents %>
<input id = 'parents-input' type = 'text' class = 'form-control' value = '<% @parents.each do |parent| %><%= parent.name %>, <% end %>'>
<% else %>
<input id = 'parents-input' type = 'text' class = 'form-control' value = '' placeholder = 'Enter names of parent collections here'>
<% end %>

<h3>Subcollections</h3>
<% if @collection.subcollections %>
<input id = 'subcollections-input' type = 'text' class = 'form-control' placeholder = 'Enter names of collections' value = "<%= @collection.subcollections.map{|x| @collection_hash[x].name}.join(',') %>"></input>
<% else %>
<input id = 'subcollections-input' type = 'text' class = 'form-control' placeholder = 'Enter names of subcollections here'></input>
<% end %>


<h3>Add a new Link</h3>
<input id = 'add-link-input' type = 'text' class = 'form-control' placeholder = 'Search for links to add to this collection'></input>

<div class = 'added-link-container'></div>

<h3>Existing Links</h3>
<table class = 'table table-hover table-condensed'>
	<tbody>
	<% @golinks.each do |golink| %>
	<tr class = 'link-row' id = '<%= golink.id %>-row'>
		<td class = 'golink-type-td'><img class = '' src = '<%= golink.get_type_image %>' height=17/></td>
		<td class = 'golink-key-td'><a href = '<%= golink.url %>' target="_blank"><%= golink.key %></a>
		</td> 
		<td class = 'golink-description-td'>
			<%= golink.description %>
		</td>
		<td><a href = '/go'>Remove this link
				</a></td>
	</tr>
	<% end %>
	</tbody>
</table>

