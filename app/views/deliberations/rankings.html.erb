<h1>Rankings for <%= @deliberation.name %></h1>


<div class = 'col-md-6'>
<h3>There are currently <%= @deliberation.applicants.length %> Applicants</h3>
<a href = '/deliberations/<%= @deliberation.id %>/generate_default_rankings'>Generate Default Rankings</a>

<table class = 'table table-striped'>
	<thead>
		<tr>
			<th>Applicant</th>
			<th>Committee</th>
			<th>Rank</th>
		</tr>
	</thead>
	<tbody>
		<% @rankings.each do |ranking| %>
		<tr>
			<td><%= ranking.applicant.name %></td>
			<td><%= ranking.committee.name %></td>
			<td><%= ranking.value %></td>
		</tr>
		<% end %>
	</tbody>
</table>