<script type = 'text/javascript'>
$(document).ready(function(){
  $('.inactive-li').mouseover(function(){
    $('.active').each(function(){
      $(this).removeClass('active');
    });
    $(this).addClass('active');
  });

  $('.inactive-li').mouseout(function(){
    $('.active').each(function(){
      $(this).removeClass('active');
    });
  });

});

</script>
