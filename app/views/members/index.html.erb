


<% if @current_member %>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Committee</th>
      <th>Role</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @current_members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= @committee_hash[member.committee_id].name %></td>
        <td><%= member.role.capitalize %></td>
        <td><%= member.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<h3>Please sign in to view the portal.</h3>
<% end %>
<br>
