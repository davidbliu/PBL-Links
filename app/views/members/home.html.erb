<%= stylesheet_link_tag "golink_catalogue" %>
<%= render 'go/catalogue_modal' %>
<div class = 'row'>
	<div class = 'col-md-7'>
		<% if current_member %>
		<div id = 'me-div'>
			<a href = '/members/<%= current_member.id %>'><img src = '<%= current_member.gravatar_url %>' class = 'profile-image'></img></a>
			<!-- <div>Set your professional image on <a href = 'http://pbl.link/gravatar' target = '_blank'>pbl.link/gravatar</a></div> -->
			<div><%= current_member.committee %></div>
			<div><%= current_member.email %></div>
			<div><%= current_member.role %></div>
		</div>
		<% end %>

		<div class="home-card">
		    <h3><span class = 'mdi-social-notifications'></span>&nbsp;Notifications</h3>
		    <div class = 'right-card shadow-z-1'>
		    	<h4>Announcements</h4>
			    <ul class = 'list-group'>
			    	<li class = 'list-group-item'>Welcome to PBL Orientation!</li>
			    	<li class = 'list-group-item'>Alumni Mixer 9/03 8PM at Pappys</li>
			    	<li class = 'list-group-item'>Dont forget to check out professional photos at <a href = 'http://pbl.link/of-photos'>pbl.link/of-photos</a></li>
			    </ul>
			</div>
		</div>	

		<!-- pull notifications from the server -->
		<div class = 'home-card' id = 'notifications-container'>
			<img id = 'notifications-loading-image' src = 'http://wpc.077d.edgecastcdn.net/00077D/fender/images/2013/template/drop-nav-loader.gif' height=50></img>
		</div>

		<!-- <div class="home-card">
		    
		    <div class = 'right-card shadow-z-1'>
			    <ul class = 'list-group'>
			    	<li class = 'list-group-item'>Welcome to PBL Orientation!</li>
			    	<li class = 'list-group-item'>Alumni Mixer 9/03 8PM at Pappys</li>
			    	<li class = 'list-group-item'>Dont forget to check out professional photos at <a href = 'http://pbl.link/of-photos'>pbl.link/of-photos</a></li>
			    </ul>
			</div>
		</div>	 -->

		<div class = 'home-card'>
			<h3><span class = 'mdi-notification-event-note'></span>&nbsp;Upcoming Events</h3>
			<div class = 'right-card shadow-z-1' id = 'events-container'>
				<img src = 'http://wpc.077d.edgecastcdn.net/00077D/fender/images/2013/template/drop-nav-loader.gif' height=100></img>
			</div>
		</div>



		<div class = 'home-card'>
				<h3><span class = 'mdi-notification-folder-special'></span>&nbsp;Starred Resources</h3>
				<%= render partial: "go/catalogue", locals: { go_links: @trending_links, favorite_links: @favorites} %>
		</div>
		<div class = 'home-card'>
				<% if @favorites %>
				<h3><span class = 'mdi-action-favorite'></span>&nbsp;Favorite Links</h3>
				<%= render partial: "go/catalogue", locals: { go_links: @favorite_links, favorite_links: @favorites} %>
				<% end %>
		</div>




		
	</div>
	<!-- end of col md 6 -->

<div class = 'col-md-5'>
	<div class="home-card-small">
		    <h3><img src = '/assets/trello-logo-long.png' height=45 style = 'margin-bottom:20px'></img>&nbsp;Tasks</h3>
		    <p>PBL Tasks is a handy integration between the Portal and Trello! Click the "Tasks" icon or visit <a href = '/tasks/guide'>pbl.link/tasks</a> to read more!</p>
		    
		    <p><div id = 'tasks-container'><img src = 'http://wpc.077d.edgecastcdn.net/00077D/fender/images/2013/template/drop-nav-loader.gif' height=100></img></div></p>
		</div>	


</div>
<!-- end of col 2 -->
</div>
<!--  end of row -->

