
<style type = 'text/css'>
.dashboard-panel-title{
	color:white;
}
.dashboard-panel-blue{
	background-color: black;
}
.home-card-small{
	/*border: 1px solid rgba(0, 0, 0, 0.1);*/
	/*background-color:white;*/
	padding: 0px 10px 0px 10px;
	margin:15px;
}
.right-card{
	/*border:1px solid rgba(0,0,0,0.1);*/
	margin:10px;	
	border-radius:5px;
	background-color: rgba(247, 247, 247, 0.85);
  border-radius:5px;
  padding: 10px;
}
