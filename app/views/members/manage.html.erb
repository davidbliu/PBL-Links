<h1>Manage Members</h1>
<br>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Events Attended</th>
      <th>Actions</th>
      <th>Confirmation</th>
      <th>Creation</th>
      <th>Update</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= EventMember.where(member_id: member.id).length %></td>
        <td><a href = '/members/<%= member.id %>/destroy'>Destroy</a> | <a href = '/members/<%= member.id %>/edit'>Edit</a> | <a href = '/members/<%= member.id %>/reconfirm'>Reconfirm</a></td>
        <td><span class = 'confirm-btn' id = '<%= member.id %>'><%= member.confirmation_status %></span></td> 
        <td><%= member.created_at %></td>
        <td><%= member.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

