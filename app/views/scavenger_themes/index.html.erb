<style type='text/css'>
.panel-title{
	font-size:25px;
}
.theme-div{
	margin-bottom:10px;
	border-bottom-width: 3px;
border-bottom-style: solid;
border-color: rgba(228, 228, 228, 1);
}
</style>
<h1>Spring 2015 Themes</h1>


<div id = 'personal stuff' class = 'col-md-3'>
<h1>Personal Stuff</h1>
	<% ScavengerGroup.get_groups(current_member.id).each do |group| %>
	<div><%= group.name %>
		<ul>
			<% group.get_members.each do |member| %>
			<li><%= member.name %></li>
			<% end %>
		</ul>
		<a href = '/scavenger_groups/<%= group.id %>/add_photo'>Upload for this group</a>
	</div>
	<% end %>
</div>

<div id = 'leaderboard' class = 'col-md-3'>
<h1>Leaderboard</h1>
	<% @people.each do |person| %>
	<div><%= person.name %>: <%= person.scavenger_points %>
	</div>
	<% end %>
</div>


<div class = 'col-md-6'>
<% @themes.each do |theme| %>
<div class = 'theme-div'>
 <h2 class = 'panel-title'><%= theme.name %></h2>

	<p><div><b>Description:</b> <%= theme.description %></div>
		<div><b>Start Time:</b> <%= theme.start_time.strftime("%d/%m/%Y at %H:%M") %></div>
		<div><b>End Time:</b> <%= theme.end_time.strftime("%d/%m/%Y at %H:%M") %></div>
	</p>

	<p><h4><b>Photos</b></h4>
		<% theme.get_photos.each do |photo| %>
		<%= image_tag photo.image, :height=>150 %>
		<% end %>
	</p>


</div>
<% end %>

</div>
<!-- end of left col -->