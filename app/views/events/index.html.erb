<h1>Listing Events</h1>

<table class='table table-condensed table-hover table-bordered'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Time</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_time.strftime("%D") %></td>
        <td><%= event.start_time.strftime("%r") %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>