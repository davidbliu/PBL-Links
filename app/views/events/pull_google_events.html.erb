
<h1>Listing Events</h1>

<a href = '/events/sync_google_events'>sync these events</a><br>
<table class='table table-condensed table-hover table-bordered'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Time</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event[:summary] %></td>
        
          <% if event[:start_time] %>
            <td><%= event[:start_time].strftime("%D") %></td>
            <td><%= event[:start_time].strftime("%r") %></td>
            <% else %>
            <td>no start time</td>
            <td>boo</td>
          <% end %>
        
      </tr>
      <% end %>
  </tbody>
</table>

