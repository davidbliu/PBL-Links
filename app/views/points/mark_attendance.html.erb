</div>


<table class='table table-condensed table-hover table-bordered' id='table-1'>

	<div id='original-thead'>
	<thead class='locked' id = 'original-fixed-head'>
		<th>Members</th>
		<% @semester_events.pluck(:name).each do |event_name| %>
		<th><%= event_name %></th>
		<% end %>
	</thead>
	</div>

	


	<tbody>
		<tr id='rowspacer'></tr>
		<% @current_cms.each do |cm| %>
		<tr class = 'member-row'>
			<td class='locked-left'><%= cm.name %></td>
			<% @mappings_dict[cm.id].each do |bool|%>
			<td class='attendance-checkbox' id='(event, member)'><% if bool %>X<% end %></td>
			<% end %>
		</tr>
		<% end %>
	</tbody>

</table>