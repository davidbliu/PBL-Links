	<!-- <td> -->
		<div class = 'col-md-4'>
			<div class = 'card points-card'>
			<h2>PBL Points</h2>
			<ul>
			<% @member_name_point_dict.keys.each do |member_name| %>
			<li><%= member_name %>: <%= @member_name_point_dict[member_name] %></li>
			<% end %>
			</ul>
			</div>
		</div>
	<!-- </td> -->
	<!-- <td> -->
		<div class = 'col-md-4'>
			<div class = 'card points-card'>
			<h2>Top Cms</h2>
			<ul>
			<% @top_cms.each do |member| %>
			<li><%= member.name %>: <%= @member_name_point_dict[member.name] %></li>
			<% end %>
			</ul>
			</div>
		</div>
