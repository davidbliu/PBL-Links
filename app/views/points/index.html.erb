	<div class = 'row'>
		<div class = 'col-md-4'>
			<div class = 'card points-card'>
			<h1>Points</h1>
			<p>You have <%= @points %> points</p>
			<h2>Attended Events</h2>
			<ul>
			<% @attended.each do |event| %>
			<li><%= event.name %></li>
			<% end %>
			</ul>
			</div>
		</div>
